{
  "name": "pdf-generation-serverless",
  "version": "1.0.0",
  "description": "Serverless PDF generation service for FSR reports",
  "main": "src/handlers/generatePDF.js",
  "scripts": {
    "start": "serverless offline",
    "deploy": "serverless deploy",
    "deploy:dev": "STAGE=dev serverless deploy",
    "deploy:prod": "STAGE=prod serverless deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest tests/unit",
    "test:integration": "node tests/test-pdf-generation.js",
    "test:local": "TEST_BASE_URL=http://localhost:3000 node tests/test-pdf-generation.js",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headless": "cypress run --headless",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:e2e:firefox": "cypress run --browser firefox",
    "test:e2e:local": "npm run start & sleep 10 && cypress run && pkill -f 'serverless offline'",
    "test:all": "npm run test:unit && npm run test:e2e",
    "logs": "serverless logs -f generatePDF",
    "remove": "serverless remove",
    "package": "serverless package"
  },
  "keywords": [
    "serverless",
    "pdf",
    "aws",
    "lambda"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1400.0",
    "axios": "^1.5.0",
    "chrome-aws-lambda": "^10.1.0",
    "puppeteer-core": "^24.23.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "aws-sdk-mock": "^6.2.1",
    "cypress": "^15.4.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "puppeteer": "^24.23.0",
    "serverless": "^3.30.0",
    "serverless-dotenv-plugin": "^4.0.0",
    "serverless-offline": "^12.0.0",
    "supertest": "^7.1.4"
  }
}
